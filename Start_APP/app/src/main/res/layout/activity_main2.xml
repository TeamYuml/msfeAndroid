<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.konrad.start_app.loginandregister.Main2Activity"
    android:background="@color/start_app2"
    android:id="@+id/layoutReg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview2"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:contentDescription="@string/login"
                android:gravity="center"
                android:src="@drawable/primary_logo_on_transparent_282x69"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-18dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="397dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="252dp"
                        android:layout_height="47dp"
                        android:layout_weight="1"
                        android:text="Haslo:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/haslo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="fill"
                        android:inputType="textPassword"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Potwiedz haslo"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/confHaslo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPassword"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="PESEL:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/PESEL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="number"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Imie:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/imie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textnazwisko"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nazwisko:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/nazwisko"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Miasto:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/miasto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Ulica:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/ulica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Nr domu"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/numerDomu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="252dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Telefon:"
                        android:textSize="30sp" />

                    <EditText
                        android:id="@+id/telefon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom"
                        android:inputType="textPersonName"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/angry_btn"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/buttons"

                android:onClick="register"
                android:shadowColor="#A8A8A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Zarejestruj"
                android:textColor="#000000"

                android:textSize="30sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rules3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="goToRules"
                    android:text="@string/pamietaj"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/check2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:checked="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>